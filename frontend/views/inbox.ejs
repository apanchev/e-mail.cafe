<!doctype html>
<html lang="fr">
	<head>
		<%- include('head') %>
		<style>
			td { word-wrap: inherit; }
		</style>
	</head>
	<body>

		<div class="wrapper">
			<div class="sidebar" data-color="orange">
				<!--

				Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
				Tip 2: you can also add an image using data-image tag

			-->

			<div class="logo">
				<a href="/" class="logo-text">
					E-mail Café
				</a>
			</div>
			<div class="logo logo-mini">
				<a href="/" class="logo-text">
					Email Café
				</a>
			</div>

			<div class="sidebar-wrapper">

				<div class="user">
					<div class="photo" style="width: 100px; height:100%; overflow: initial; border: 0;">
						<img src="/img/coffee.png" />
					</div>
					<div class="info">
						<a data-toggle="collapse" class="collapsed" style="font-weight:bold;word-wrap: break-word;">
							<%= login %>@e-mail.cafe
						</a>
					</div>
				</div>

				<ul class="nav">
					<li>
						<a href="#" onclick="swal('Bientôt disponible !','','info')">
							<i class="pe-7s-lock"></i>
							<p>Privatiser cette boîte</p>
						</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="main-panel">
			<nav class="navbar navbar-default">
				<div class="container-fluid">
					<div class="navbar-minimize">

					</div>
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" href="#">Boîte de réception</a>
					</div>
					<div class="collapse navbar-collapse navbar-right">

						<form class="navbar-form navbar-left navbar-search-form" role="search" method="post" action="/">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-search"></i></span>
								<input type="text" name="login" class="form-control" placeholder="Boîte de réception">
							</div>
						</form>

					</div>
				</div>
			</nav>



			<div class="content">
				<div class="container-fluid">

					<div class="row">
						<div class="col-md-12">
							<div class="card">

								<div class="toolbar">
								</div>

								<table id="bootstrap-table" class="table">
                  <thead>
                    <th data-field="date" data-sortable="true">Date</th>
										<th data-field="name" data-sortable="true">From</th>
										<th data-field="subject" data-sortable="true">Sujet</th>
										<th data-field="actions" class="text-left" data-events="operateEvents" data-formatter="operateFormatter">Ouvrir</th>
									</thead>
									<tbody>
										<% if (emails) {
											emails.forEach((val, i) => { %>
												<tr>
													<td><%= val.date %></td>
													<td><%= val.from %></td>
													<td><%= val.subject %></td>
													<td><%= val.hash %></td>
												</tr>
												<% });
											} %>
									</tbody>
								</table>
							</div><!--  end card  -->
						</div> <!-- end col-md-12 -->
					</div> <!-- end row -->

				</div>
			</div>

			<footer class="footer">
				<div class="container-fluid">
					<nav class="pull-left">
						<ul>
							<li>
								<a href="/">
									Home
								</a>
							</li>
							<li>
								<a href="/about">
									Comment utiliser notre service ?
								</a>
							</li>
							<li>
								<a href="/cgu">
									Conditions générales d'utilisation
								</a>
							</li>
						</ul>
					</nav>
					<p class="copyright pull-right">
						&copy; 2018 - <script>document.write(new Date().getFullYear())</script> <a href="/">E-mail Café</a>
					</p>
				</div>
			</footer>


		</div>
	</div>


</body>

<!--   Core JS Files and PerfectScrollbar library inside jquery.ui   -->
<script src="/js/jquery.min.js" type="text/javascript"></script>
<script src="/js/jquery-ui.min.js" type="text/javascript"></script>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Bootstrap Table Plugin    -->
<script src="/js/bootstrap-table.js"></script>

<!-- Light Bootstrap Dashboard Core javascript and methods -->
<script src="/js/light-bootstrap-dashboard.js"></script>

<script src="/js/sweetalert2.js"></script>

<script type="text/javascript">
var $table = $('#bootstrap-table');

function operateFormatter(value, row, index) {
	return [
		'<a rel="tooltip" title="Ouvrir l\'e-mail" class="btn btn-simple btn-info btn-icon table-action view" href="javascript:void(0)">',
		'<i class="fa fa-image"></i>',
		'</a>'
	].join('');
}

$().ready(function(){
	window.operateEvents = {
		'click .view': (e, value, row, index) => {
			info = JSON.stringify(row);
			window.location.href = `/inbox/<%= login %>/message/${row.actions}`;
		}
	};

	$table.bootstrapTable({
		toolbar: ".toolbar",
		clickToSelect: true,
		showRefresh: false,
		search: true,
		showToggle: false,
		showColumns: true,
		pagination: true,
		searchAlign: 'left',
		pageSize: 8,
		clickToSelect: true,
		pageList: [8,10,25,50,100],

		formatShowingRows: function(pageFrom, pageTo, totalRows){
			//do nothing here, we don't want to show the text "showing x of y from..."
		},
		formatRecordsPerPage: (pageNumber) => {
			return pageNumber + " rows visible";
		},
		icons: {
			refresh: 'fa fa-refresh',
			toggle: 'fa fa-th-list',
			columns: 'fa fa-columns',
			detailOpen: 'fa fa-plus-circle',
			detailClose: 'fa fa-minus-circle'
		}
	});

	//activate the tooltips after the data table is initialized
	$('[rel="tooltip"]').tooltip();

	$(window).resize(() => {
		$table.bootstrapTable('resetView');
	});


});

</script>

</html>